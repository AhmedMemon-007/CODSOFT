        "import re\n",
        "\n",
        "pattern_response = {\n",
        "    r'hello|hi|hey': 'Hello there!',\n",
        "    r'how are you|how\\'s it going': 'I\\'m doing well, thank you!',\n",
        "    r'what is your name|who are you': 'I\\'m a simple chatbot. You can call me ChatBot.',\n",
        "    r'bye|goodbye|see you': 'Goodbye! Have a great day!',\n",
        "    r'.*': 'I am sorry, I donot understand that.'\n",
        "}\n",
        "\n",
        "def respond(user_input):\n",
        "  for pattern, response in pattern_response.items():\n",
        "     if re.match(pattern, user_input):\n",
        "            return response\n",
        "  return patterns_responses['I am sorry, I donot understand that.']\n",
        "\n",
        "#Welcome Message\n",
        "print(\"a simple chatbot that responds to user inputs\")\n",
        "def main():\n",
        "  while True:\n",
        "    user_input = input(\"Enter Message: \")\n",
        "    user_input = user_input.lower() # To make easier matching ; converted into lower_case\n",
        "    if user_input == 'bye' or user_input == 'quit' or user_input == 'goodbye' or user_input == 'see you':\n",
        "      print(\"Exited\")\n",
        "      break\n",
        "    else:\n",
        "      print('Chatbot: ', respond(user_input))\n",
        "\n",
        "if __name__ == \"__main__\":\n",
        "    main()\n"
